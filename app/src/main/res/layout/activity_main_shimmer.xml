<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Views.MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="10dp"
                android:background="@color/shimmer"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearance="@style/roundedImageView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer"
                    android:fontFamily="@font/poppins_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/shimmer"
                    android:fontFamily="@font/poppins_medium"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1.0"
                    android:background="@color/shimmer"
                    android:fontFamily="@font/poppins_light"
                    android:scrollbars="horizontal"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tagCard"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notReverse"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:cornerRadius="5dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tagCard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="10dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notReverse">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tvChapterNumber"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card5"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card6"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card7"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/shimmer"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>